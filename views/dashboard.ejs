<%- include("secondHeader") -%>
<h1 class="display-4 fw-bold lh-1 mb-3">Dashboard</h1>

 
<% if(typeof(firstName) !== 'undefined') {%> 
<h3>Welcome back,  <%= firstName %>!</h3>
<% }else{ %>
  <h3>Welcome </h3>
  <% }%>
<section>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Owner ID</th>
                
            </tr>
          </thead>
          <tbody>   
    
            <% let i=0; while(i !=allRepositories.length){ %>
              
            <tr>
              <td><%= allRepositories[i].id %></td>
              <td><%=  allRepositories[i].repositoryName %></td>
              <td><%= allRepositories[i].repositoryDescription%></td>
              <td><%= allRepositories[i].userId%></td>
            </tr>
         
            <% i++ } %>
          </tbody>
        </table>   
  </section>

  <div class="col-lg-12 col-md-8 mx-auto">
    <p>
        <div class="b-example-divider"></div>
       <form action="/deleteUser" method="delete">
        <a href="/deleteUser" class="btn btn-danger my-2">Delete User</a>
      </form>
        <a href="/editUser" class="btn btn-danger my-2">Edit User</a><br>
        <a href="/createRepository" class="btn btn-primary my-2">Create Repository</a>
        <a href="/yourRepositories" class="btn btn-primary my-2">Your Repositories</a>
    </p>
  </div>
<%- include("footer") -%>

