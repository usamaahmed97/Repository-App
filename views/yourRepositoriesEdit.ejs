<%- include("secondHeader") -%>

<div class="container col-xl-12 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-md-10 mx-auto col-lg-5">
      <div class="col-lg-12 text-center text-lg-center">
        <h2>Edit Repository</h2>
      </div>
      <% if(typeof (repositoryErrors)!= 'undefined') {%> <%
      repositoryErrors.forEach(function(error){%>
      <div class="alert alert-danger" role="alert"><%= error.msg %></div>

      <% }); %> <% } %>

      <form
        class="p-8 p-md-5 rounded-3"
        action="/yourRepositories/edit"
        method="post"
      >
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            name="repositoryName"
            value="<%= editRepository.repositoryName %>"
            required
          />
          <label for="floatingInput">Repository Name</label>
        </div>

        <div class="form-floating mb-3">
          <input
            class="form-control"
            name="repositoryDescription"
            value="<%= editRepository.repositoryDescription %>"
            required
          />
          <label>Repository Description</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">
          UPDATE
        </button>
        <div style="text-align: center; margin-top: 2rem"></div>
      </form>
    </div>
  </div>
</div>

<%- include("footer") -%>
