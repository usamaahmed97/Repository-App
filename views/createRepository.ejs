<% if(typeof(firstName) !== 'undefined') {%> 
  <%- include("secondHeader", {firstName, id}); -%>
<% }else{%>
  <%- include("secondHeader"); -%>
<% }%>



<div class="container col-xl-12 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    
    <div class="col-md-10 mx-auto col-lg-5">
        <div class="col-lg-12 text-center text-lg-center">
          <h2>Create Repository</h2>
      </div>

      <%  if(typeof (createRepositoryErrors)!= 'undefined') {%> <%
        createRepositoryErrors.forEach(function(error){%>
        <div class="alert alert-danger" role="alert"><%= error.msg %></div>
  
        <% }); %> <% } %>

      <form class="p-4  border rounded-3 bg-light" action="/createYourRepository" method="post">

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="repositoryName"
            name="repositoryName"
            required
          />
          <label for="repositoryName">Repository Name</label>
          </div>

          <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="repositoryDescription"
            name="repositoryDescription"
            required
          />
          <label for="repositoryDescription">Repository Description</label>
          </div>
        
        <button class="w-100 btn btn-lg btn-primary" type="submit" style="background-color: #363062; color:#ffffff; border: none;">Create Repository</button>
    
       
       <div style="text-align: center; margin-top: 2rem"></div>
       
      </form>
    </div>
  </div>
</div>


<%- include("footer") -%>