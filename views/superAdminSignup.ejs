<%- include("header") -%>

<div class="b-example-divider"></div>

<div class="container col-xl-12 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-md-10 mx-auto col-lg-5">
      <div class="col-lg-12 text-center text-lg-center">
        <h1 class="display-8 fw-bold lh-1 mb-3">Sign Up</h1>
      </div>

      <%- include("partials/messages.ejs") -%>
      <form
        class="p-4 border rounded-3 bg-light"
        action="/superAdminSignup"
        method="post"
        autocomplete="off"
      >
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="First Name"
            name="firstName"
            value="<%= typeof firstName !='undefined'? firstName:'' %>"
            autocomplete="false"
            required
          />
          <label for="floatingPassword">First Name</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="Last Name"
            name="lastName"
            value="<%= typeof lastName !='undefined'? lastName:'' %>"
            autocomplete="false"
            required
          />
          <label for="floatingPassword">Last Name</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="email"
            class="form-control"
            id="floatingInput"
            placeholder="name@example.com"
            name="email"
            value="<%= typeof email !='undefined'? email:'' %>"
            autocomplete="false"
            required
          />
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating mb-3">
          <input
            type="password"
            class="form-control"
            id="floatingPassword"
            placeholder="Password"
            name="password"
            value="<%= typeof password !='undefined'? password:'' %>"
            autocomplete="false"
            required
          />
          <label for="floatingPassword">Password</label>
        </div>
        <div class="checkbox mb-3"></div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">
          Sign Up
        </button>
        <hr class="my-4" />

        <small class="text-muted"
          >By clicking Sign up, you agree to the terms of use.</small
        >
      </form>
    </div>
  </div>
</div>

<%- include("footer") -%>
